pipeline {
    agent any
    tools{
        maven 'Maven'
        jdk 'JDK'
    }
    
    stages {
        stage('Clean')
        {
             steps {
                    bat 'mvn -f passport/pom.xml clean'
                
            }
        }
       
        stage('Package') {
            steps {
                    bat 'mvn -f passport/pom.xml package'
                
            }
        }
        stage('Test') { 
            steps {
                bat 'mvn -f passport/pom.xml test' 
            }
            
        }
        stage( 'SonarQube analysis'){
            steps {
              withSonarQubeEnv('sonar') {
                bat 'mvn sonar:localsonar'
              }
            }
        }
    }
}
